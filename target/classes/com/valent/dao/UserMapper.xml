<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.valent.dao.UserMapper">
    
    <insert id="insertUser" parameterType="User">
        insert into community.user(username,password,gender,nickname,profile,image,createtime)
        values (#{username},#{password},#{gender},#{nickname},#{profile},#{image},#{createtime})
    </insert>
    
    <select id="findUserByUsername" parameterType="string" resultType="User">
        select * from community.user where username=#{value}
    </select>

</mapper>